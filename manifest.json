{
  "name": "No Piazza Stories",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Removes Piazza Stories and its badge from Piazza.",

  "permissions": [
    "https://piazza.com/"
  ],

  "background": {
    "scripts": ["script.js"]
  },

  "content_scripts": [
    {
      "matches": ["https://piazza.com/*"],
      "js": [
        "script.js"
      ]
    }
  ],

  "content_security_policy": "script-src 'self'; object-src 'self'"
}
